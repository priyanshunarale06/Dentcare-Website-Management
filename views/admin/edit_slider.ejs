<%- include('navbar.ejs') %>
<form action="/admin/update_slider" method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>EDIT SLIDER</h2>
            </div>
            <div class="container bg-white p-5">
                <div class="row">
                    <div class="col-md-12">
                        <h3>Add new Slide</h3>
                    </div>
                    <div class="col-md-3">
                        Slider Image
                        <input type="hidden" name="slider_id"  value="<%=slider[0].slider_id%>">
                        <input type="file" name="slider_image" class="form-control" required >
                    </div>
                    <div class="col-md-3">
                        <img src="/img/<%=slider[0].slider_image%>" width="200px">
                    </div>
                    <div class="col-md-3">
                        Slider Short title
                        <input type="text" value="<%=slider[0].slider_short_title%>" name="slider_short_title" class="form-control"> 
                    </div>
                    <div class="col-md-3">
                        Slider Title
                        <input type="text" value="<%=slider[0].slider_title%>" name="slider_title" class="form-control"> 
                    </div>
                    <div class="col-md-12 mt-3 text-center">
                        <button class="btn btn-primary">Save slider</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
