<%- include('navbar.ejs') %>

    <form action="/admin/save_slider" method="post" enctype="multipart/form-data">
        <div class="container bg-white p-5">
            <div class="row">
                <div class="col-md-12">
                    <h3>Add new Slide</h3>
                </div>
                <div class="col-md-4">
                    Slider Image
                    <input type="file" required name="slider_image" class="form-control">
                </div>
                <div class="col-md-4">
                    Slider Short title
                    <input type="text" name="slider_short_title" class="form-control"> 
                </div>
                <div class="col-md-4">
                    Slider Title
                    <input type="text" name="slider_title" class="form-control"> 
                </div>
                <div class="col-md-12 mt-3 text-center">
                    <button class="btn btn-primary">Save slider</button>
                </div>
            </div>
        </div>
    </form>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-sm">
                    <tr>
                        <th></th>
                        <th></th>
                        <th>SN.</th>
                        <th>IMAGE</th>
                        <th>SHORT TITLE</th>
                        <th>TITLE</th>
                    </tr>
                    <% for(var i=0;i<slides.length;i++) { %>
                    <tr>
                        <td>
                            <a href="/admin/delete_slider/<%=slides[i].slider_id%>">
                                <button class="btn btn-danger">DELETE</button>
                            </a>
                        </td>
                        <td>
                            <a href="/admin/edit_slider/<%=slides[i].slider_id%>">
                                <button class="btn btn-primary">EDIT</button>
                            </a>
                        </td>
                        <td><%=i+1%></td>
                        <td>
                            <img src="/img/<%=slides[i].slider_image%>" width="100px" height="100px"
                        </td>
                        <td><%=slides[i].slider_short_title%></td>
                        <td><%=slides[i].slider_title%></td>
                    </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div>
<%- include('footer.ejs') %>
<style>
    td{
        text-align:center;
        
    }
    th{
        text-align: center;
    }
</style>