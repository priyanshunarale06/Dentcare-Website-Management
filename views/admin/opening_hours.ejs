<%- include('navbar.ejs')%>
<form action="/admin/save_opening_hours" method="post">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 text-center mt-3">
                <h3>Opening hours</h3>
            </div>
            <div class="col-md-6">
                Day
                <input type="text" name="day" class="form_control w-100">
            </div>
            <div class="col-md-3">
                Open time
                <input type="time" name="open_time" class="form_control w-100">
            </div>
            <div class="col-md-3">
                Clode time
                <input type="time" name="close_time" class="form_control w-100">
            </div>
            <div class="col-md-12 text-center mt-5">
                <button class="btn btn-primary">SAVE</button>
            </div>
        </div>
    </div>
</form>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 mt-3">
            <table class="tabl table-bordered table-sm w-100">
                <tr>
                    <th></th>
                    <th>Sn</th>
                    <th>Day</th>
                    <th>Open Time</th>
                    <th>Close Time</th>
                </tr>
                <% for(var i=0;i<open_hours.length;i++) { %>
                <tr>
                    <td width="1%" style="white-space: nowrap;">
                        <a href="/admin/edit_open_hours/<%=open_hours[i].opening_hours_id%>">
                            <button class="btn btn-primary">Edit</button>
                        </a>
                        <a href="/admin/delete_open_hours/<%=open_hours[i].opening_hours_id%>">
                            <button class="btn btn-danger">Delete</button>
                        </a>
                    </td>
                    <td><%=i+1%></td>
                    <td><%=open_hours[i].day%></td>
                    <td><%=open_hours[i].open_time%></td>
                    <td><%=open_hours[i].close_time%></td>
                </tr>
                <% } %>
            </table>
        </div>
    </div>
</div>
<%- include('footer.ejs')%>